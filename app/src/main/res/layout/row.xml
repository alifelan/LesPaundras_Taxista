<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
            android:id="@+id/row_text_src_dest"
            android:text="MTY-REYNOSA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/row_text_price"/>

    <TextView
            android:id="@+id/row_text_price"
            android:text="$85.53"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/row_text_date"
            app:layout_constraintLeft_toRightOf="@id/row_text_src_dest"
            app:layout_constraintRight_toRightOf="parent"/>

    <TextView
            android:id="@+id/row_text_date"
            android:text="15/4/2019, 11:32 AM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/row_text_price"
            app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
            android:id="@+id/row_image_driver"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_person_black_24dp"
            app:layout_constraintTop_toBottomOf="@id/row_text_date"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/row_text_driver"/>

    <TextView
            android:id="@+id/row_text_driver"
            android:text="Rolando Gomez"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/row_text_date"
            app:layout_constraintLeft_toRightOf="@id/row_image_driver"
            app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>